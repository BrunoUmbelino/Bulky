@page
@model BulkyRazorPages.Pages.Categories.DeleteModel
@{
}



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div class="row p-1 mb-3">
            <label asp-for="category.Name" class="p-0">Category Name</label>
            <input asp-for="category.Name" type="text" class="form-control" disabled />
        </div>
        <div class="row p-1 mb-3">
            <label asp-for="category.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="category.DisplayOrder" type="text" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-info form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>