
<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary text-light py-3 rounded-top-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>Order List</h2>
                </div>
            </div>
        </div>
        <div class="card-body px-4 rounded-bottom-2">
            <div class="d-flex justify-content-between pb-3 pt-2 ">
                <span class="text-end"></span>
                <ul class="OrderList-menuFilter list-group list-group-horizontal-sm">
                    <a asp-controller="Order" asp-action="Index" asp-route-status="inProcess" >
                    <li class="list-group-item">In Process</li>
                    </a>
                    <a asp-controller="Order" asp-action="Index" asp-route-status="paymentPending" >
                    <li class="list-group-item">Payment Pending</li>
                    </a>
                    <a asp-controller="Order" asp-action="Index" asp-route-status="approved">
                    <li class="list-group-item">Aproved</li>
                        </a>
                    <a asp-controller="Order" asp-action="Index" asp-route-status="all" >
                        <li class="list-group-item">All</li>
                    </a>
                </ul>
            </div>
            <table id="OrderTable" class="table table-borderless table-striped table-light">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}