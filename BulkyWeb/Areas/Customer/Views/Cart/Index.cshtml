@model ShoppingCartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                       class="btn btn-outline-info text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="container-fluid">

                    @foreach (var cartItem in Model.ShoppingCartItems)
                    {
                        <div class="row border-bottom py-3">
                            <div class="col-3 text-center py-2">
                                @if (cartItem.Product != null && cartItem.Product.Images.Any())
                                {
                                    <img src="@cartItem.Product.Images.First().ImageUrl" class="card-img-top rounded w-100" style="max-width: 400px; max-height:300px;" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/100x100/png" />
                                }
                            </div>
                            <div class="col-5">
                                <h5 class="text-uppercase text-primary"><strong>@cartItem.Product?.Title</strong></h5>
                                <div class="product-description">
                                    <span class="text-secondary">Synopsis:</span>
                                    <div class="short-description">
                                        @Html.Raw(@cartItem.Product?.Description)
                                    </div>
                                    <div class="full-description" style="display: none;">
                                        @Html.Raw(@cartItem.Product?.Description)
                                    </div>
                                    <a href="#" class="read-more">Ler mais</a>
                                </div>
                            </div>
                            <div class="col text-center row">
                                <div class="col text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @cartItem.Price.ToString("c")
                                        <span class="text-primary">&nbsp;x&nbsp;</span>@cartItem.Count
                                    </h6>
                                </div>
                                <div class="col pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="plusCartItem" asp-route-cartItemId="@cartItem.Id"
                                           class="btn btn-outline-primary bg-gradient rounded">
                                            <i class="bi bi-plus-lg"></i>
                                        </a> &nbsp;
                                        <a asp-action="minusCartItem" asp-route-cartItemId="@cartItem.Id"
                                           class="btn btn-outline-primary bg-gradient rounded">
                                            <i class="bi bi-dash-lg"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col text-right pt-2">
                                    <a asp-action="removeCartItem" asp-route-cartItemId="@cartItem.Id"
                                       class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> Total </h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-action="Summary"
                           class="btn btn-primary w-100 py-2">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                var $shortDescription = $(".short-description");
                var $fullDescription = $(".full-description");
                var $readMore = $(".read-more");

                var charLimit = 400;

                // Verifique se a descrição curta precisa ser truncada
                var shortDescriptionHtml = $shortDescription.html();
                if (shortDescriptionHtml.length > charLimit) {
                    var truncatedHtml = shortDescriptionHtml.substring(0, charLimit) + "...";
                    $shortDescription.html(truncatedHtml);
                    $readMore.show();
                }

                // Manipule o clique no link "Ler mais"
                $readMore.click(function (e) {
                    e.preventDefault();
                    $shortDescription.toggle();
                    $fullDescription.toggle();
                });
            });
        });
    </script>
}